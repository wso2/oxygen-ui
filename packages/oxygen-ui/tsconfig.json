{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist",
    "emitDeclarationOnly": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "lib": ["es2015", "dom"],
    "moduleResolution": "node",
    "module": "esnext"
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx",
  ]
}
